{
  "name": "iet-ou/wp-lace-evidence-site",
  "description": "Site-installer for WordPress-based LACE Evidence Hub. Â©2015 The Open University, UK.",
  "keywords": [ "LACE", "LearningAnalytics", "OpenUniversity", "IET-OU" ],
  "homepage": "http://evidence.laceproject.eu/",
  "type": "project",
  "time": "2015-03-16",
  "license": "proprietary",
  "minimum-stability": "dev",
  "authors": [
    { "name": "Nick Freear (@nfreear)" }
  ],
  "support": {
    "email": "iet-webmaster@open.ac.uk",
    "source": "https://gist.github.com/nfreear/8cbebb09cfb235140494#"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "webroot",
        "version": "4.1",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.1.zip"
        },
        "require": {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "iet-ou/wp-evidence-hub",
        "type": "wordpress-plugin",
        "version": "1.1.2-beta",
        "source": {
          "type": "git",
          "url": "https://github.com/IET-OU/wp-evidence-hub.git",
          "reference": "CR38-lace"
        },
        "require": {
          "composer/installers": "~1.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=5.3.3",
    "fancyguy/webroot-installer": "1.1.0",

    "wordpress/wordpress": "4.1",

    "wpackagist-plugin/google-universal-analytics": "2.3.4",
    "wpackagist-plugin/slickquiz": "1.3.7.1",
    "wpackagist-theme/tiny-forge": "1.5.9",

    "iet-ou/wp-evidence-hub": "*"
  },
  "extra": {
    "webroot-dir": "wordpress",
    "webroot-package": "wordpress/wordpress",


    "//": [
      "https://roots.io/using-composer-with-wordpress/",
      "http://composer.json.jolicode.com/",
      "https://github.com/IET-OU/oer-evidence-hub-org",
      "TODO: http://github.com/IET-OU/wp-iet-plugins [...]",

      "wp-config.php: define('WP_PLUGIN_DIR', __DIR__.'/../wp-content/plugins');",
      ".. themes$ ln -s ../../../wp-content/themes/tiny-forge tiny-forge"
    ]
  }
}
